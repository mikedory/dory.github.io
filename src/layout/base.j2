<!doctype html>
<!--[if lt IE 7 ]> <html lang="en" class="no-js ie6"> <![endif]-->
<!--[if IE 7 ]>		 <html lang="en" class="no-js ie7"> <![endif]-->
<!--[if IE 8 ]>		 <html lang="en" class="no-js ie8"> <![endif]-->
<!--[if (gte IE 9)|!(IE)]><!--> <html lang="en" class="no-js"> <!--<![endif]-->
<head>
	{% block starthead %}{% endblock starthead %}
	<meta charset="{{ resource.meta.charset }}">
	<meta http-equiv="X-UA-Compatible" content="{{ resource.meta.compatibility }}">

	<title>{% block title %}{{ resource.meta.title }}{% endblock %}</title>
	<meta name="description" content="{{ resource.meta.description }}">
	<meta name="author" content="{{ resource.meta.author }}">

	<!-- HTML5 shim, for IE6-8 support of HTML elements -->
	<!--[if lt IE 9]>
		<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
	<![endif]-->

	<meta name="viewport" content="{{ resource.meta.viewport }}">

{% block favicons %}
	<link rel="shortcut icon" href="{{ media_url('images/_favicon.ico') }}">
	<link rel="apple-touch-icon" href="{{ media_url('images/_apple-touch-icon.png') }}">
{% endblock favicons %}

	{% block css %}
	<script type="text/javascript" src="https://use.typekit.com/yna6ipo.js"></script>
	<script type="text/javascript">try{Typekit.load();}catch(e){}</script>
	<link rel="stylesheet" href="{{ media_url('css/bootstrap.css') }}">
	<link rel="stylesheet" href="{{ media_url('css/bootstrap-responsive.css') }}">
	<link rel="stylesheet" href="{{ media_url('css/style.css') }}">
	<link rel="stylesheet" href="{{ media_url('css/highlight-theme-twilight.css') }}">
	{% endblock css %}

	{% block headjs %}
	<script src="{{ media_url('js/libs/modernizr-1.7.min.js') }}"></script>
	{% endblock headjs %}

	{% block endhead %}
	{% endblock endhead %}
</head>
<body id="{{ resource.meta.id if resource.meta.id else resource.slug }}">
	{% block body %}
				
	{% block topbar %}
	<div class="navbar navbar-fixed-top">
		<div class="navbar-inner">
			<div class="container">
				<a class="brand" href="/">Mike Dory</a>
				<div class="nav-collapse">
				{% block nav %}
					{% from "macros.j2" import render_nav with context %}
					{{ render_nav(menu, 'main_nav') }}
				{% endblock %}
				</div><!--/.nav-collapse -->
			</div>
		</div>
	</div>
	{% endblock topbar %}

	<div class="container main_container">
	{% block container %}

		{# main block #}
		{% block intro %}
		{% endblock intro %}

		{# main block #}
		{% block main %}
		{% endblock main %}


		{# nice lil' footer #}
		{% block footer %}
		<hr>
		<footer>
			&copy; Mike Dory, 2006-2012

			<div class="row social_networks right">
				<span class="icon_text"><a href="http://twitter.com/mike_dory">t</a></span>
				<span class="icon_text"><a href="http://twitter.com/mike_dory">f</a></span>
				<span class="icon_text"><a href="mailto:mike@dory.me">@</a></span>
			</div>

		</footer>
		{% endblock footer %}

	{% endblock container %}
	</div> <!-- end of container -->

	{% endblock body%}

	{% block js %}

		{% block jquery %}
			{% if site.config.mode == "production" %}
			<script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.js"></script>
			{% endif %}
		<script>window.jQuery || document.write('<script src="{{ media_url('js/libs/jquery-1.7.1.min.js') }}">\x3C/script>')</script>
		{% endblock jquery %}

		{% block scripts %}
		<!-- Bootstrap goodies -->
		<script src="{{ media_url('js/bootstrap.js') }}"= ></script>
		<script src="{{ media_url('js/libs/rainbow-custom.min.js') }}"></script>
		<!-- <script src="{{ media_url('js/bootstrap-carousel.js') }}"= ></script> -->
		<!-- <script src="{{ media_url('js/bootstrap-typeahead.js') }}"= ></script> -->

		<!-- site-specific scripts -->
		<script src="{{ media_url('js/script.js') }}"= ></script>
		{% endblock scripts %}

		<!--[if lt IE 7 ]>
			<script src="js/libs/dd_belatedpng.js"></script>
			<script>DD_belatedPNG.fix('img, .png_bg'); </script>
		<![endif]-->

		{% block analytics %}
			{% include "analytics.j2" %}
		{% endblock analytics %}

	{% endblock js %}
</body>
</html>