			<script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.js"></script>
			{% endif %}
		<script>window.jQuery || document.write('<script src="{{ media_url('js/libs/jquery-1.7.1.min.js') }}">\x3C/script>')</script>
