	{% endblock content%}

	{% block js %}

		{% block jquery %}
			{% if site.config.mode == "production" %}
			<script src="//ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.js"></script>
			{% endif %}
		<script>window.jQuery || document.write('<script src="{{ media_url('js/libs/jquery-1.6.2.min.js') }}">\x3C/script>')</script>
